# ===========================
# LLM 설정 (필수)
# ===========================

# Google AI API Key (Gemini) - 필수
# https://aistudio.google.com/app/apikey 에서 발급
GOOGLE_API_KEY=your-google-api-key-here

# OpenAI API Key (선택사항, Gemini만 써도 됨)
OPENAI_API_KEY=your-openai-api-key-here

# 사용할 모델 제공자 (openai 또는 gemini)
MODEL_PROVIDER=gemini

# 사용할 모델 이름
OPENAI_MODEL=gpt-4o
GEMINI_MODEL=gemini-2.0-flash-exp

# ===========================
# 검색 API (필수)
# ===========================

# Serper.dev API Key (이미지 검색 + 텍스트 검색)
# https://serper.dev/ 에서 발급 (무료 2,500회/월)
SERPER_API_KEY=your-serper-api-key-here

# SerpAPI Key (선택사항, Serper 대신 사용 가능, 더 비쌈)
# https://serpapi.com/ 에서 발급
# SERPAPI_KEY=your-serpapi-key-here

# 카카오 REST API Key (식당 검색용)
# https://developers.kakao.com/ 에서 발급
KAKAO_API_KEY=your-kakao-rest-api-key-here

# ===========================
# Database - Supabase (필수)
# ===========================

# Supabase 프로젝트 URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (공개 키)
SUPABASE_ANON_KEY=your-supabase-anon-key-here
